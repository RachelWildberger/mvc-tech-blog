{{#each posts as |post|}}

    <div class="container post">
        <div class="row mb-4 post">
            <div class="col-md-5">
                <h2>
                    <a href="/post/{{post.id}}">{{post.title}}</a>
                </h2>
            </div>

            <div class="col-4">
                <p class="postCreate text-right">Created by
                    {{post.user.username}}
                    on
                    {{format_date blog.date_created}}
                </p>
            </div>
        </div>
        <div class="col-md-7">
            <p>
                {{post.description}}
            </p>
        </div>
    </div>
{{/each}}